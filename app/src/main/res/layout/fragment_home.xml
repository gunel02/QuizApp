<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/change_language_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/button_level_background"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/button_level_background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:gravity="end"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">


                <TextView
                    android:id="@+id/change_language_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:text="@string/change_language"
                    android:textColor="@color/black"
                    android:textSize="20sp" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/just_text"
                    android:src="@drawable/change_language_button"
                    app:tint="@color/black" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/choose_level_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/choose_your_level"
                android:textColor="@color/white"
                android:textSize="25sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/first_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/first_level_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_level_background"
                    android:gravity="center"
                    android:text="@string/level_1"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/second_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/second_level_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_level_background"
                    android:gravity="center"
                    android:text="@string/level_2"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/third_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="25dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/third_level_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/button_level_background"
                    android:gravity="center"
                    android:text="@string/level_3"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/users_button"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="25dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/users_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/middle"
                    android:gravity="center"
                    android:text="@string/users"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/users_info_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:visibility="invisible"
                app:cardCornerRadius="25dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/users_info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/middle"
                    android:gravity="center"
                    android:text="@string/users_info"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/post_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="25dp"
                android:visibility="invisible"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp">


                <TextView
                    android:id="@+id/fourth_level_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/middle"
                    android:gravity="center"
                    android:text="PostInfo"
                    android:textColor="@color/black"
                    android:textSize="40sp" />


            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>